<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input"
    tools:context="hotelsactivity.HotelDetailActivity">


    <TextView
        android:id="@+id/detailsTitle"
        android:background="#448dab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Hotel Name"
        android:textAlignment="center"
        android:textColor="#0e0e0e"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/detailsTextView"
        android:background="#448dab"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#c3000000"
        android:text="Hotel Details...."
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/detailsDateText"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/detailsTextView"
        android:text=""
        android:layout_alignParentRight="true"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_below="@+id/detailsDateText"
        android:layout_centerHorizontal="true"
        android:text="delete"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
