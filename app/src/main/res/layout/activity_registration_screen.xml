<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regi"
    tools:context="com.google.travel_assistantt.RegistrationScreen">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tripadvisor"/>

    <EditText
        android:layout_marginTop="110dp"
        android:id="@+id/namereg"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:hint="Name"
        android:textColor="#f40404"
        android:textSize="40dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/emailreg"
        android:layout_below="@+id/namereg"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:hint="Email"
        android:textColor="#8f8f8f"
        android:textSize="40dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/passreg"
        android:layout_below="@+id/emailreg"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:hint="Password"
        android:textColor="#8f8f8f"
        android:textSize="40dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/Conpassreg"
        android:layout_below="@+id/passreg"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:hint="Confirm Password"
        android:textColor="#8f8f8f"
        android:textSize="30dp"
        android:gravity="left"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/signupreg"
        android:layout_below="@+id/Conpassreg"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/signup"
        android:layout_marginTop="5dp"/>


</RelativeLayout>
